@model Chen_Xuxian_HW6.Models.OrderDetail

@{
    ViewData["Title"] = "AddToOrder";
}

<h2>AddToOrder</h2>
<h4>OrderDetail</h4>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Order.OrderID)
    <div class="row">
        <div class="col-md-4">
            <form asp-action="AddToOrder">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="OrderDetailID" />
                <div class="form-group">
                    <label class="control-label col-md-2">Select a Product:</label>
                    <div class="col-md-8">
                        @Html.DropDownList("SelectedProducts", (SelectList)ViewBag.AllProducts, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Quantity" class="control-label"></label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Add Product to Order" class="btn btn-default" />
                </div>
            </form>
        </div>
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
}






